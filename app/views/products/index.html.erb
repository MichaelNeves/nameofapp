
<div class="container">
  <div class="container-fluid">
    <p id="notice"><%= notice %></p>

    <h1 class="products-title">Our Selection</h1>

  
        <% @products.each do |product| %>
    
    
      
      <div class="row">
          <div class="col-md-3"><%= product.name %></div>
          <div class="col-md-3"><%= product.image_url %></div>
          <div class="col-md-6"><%= product.description %></div>  
      </div>
    
      <div class="row">
          <div class="col-md-1"><%= link_to 'Show', product %></div>
          <div class="col-md-1"><%= link_to 'Edit', edit_product_path(product) %></div>
          <div class="col-md-1"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
      
        <% end %>
      
   


    <br>

    <%= link_to 'New Product', new_product_path %>
  </div>
</div>