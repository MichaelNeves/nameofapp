
<div class="container">
  <div class="container-fluid">
    <p id="notice"><%= notice %></p>

    <h1 class="products-title">Our Selection</h1>

  
        <% @products.each do |product| %>

      <div class="row">
        <div class="col-md-4 col-xs-12"><%= image_tag product.image_url %></div>
        <div class="col-md-6 col-xs-12 product-name"><%= product.name %></div>
        <div class="col-md-6 col-xs-12"><%= product.prices %></div>
        <div class="col-md-6 col-xs-12"><%= product.description %></div>  
      </div>
    
      <div class="row product-links">
          <div class="col-md-1 col-xs-3 product-option"><%= link_to 'Show', product %></div>
          <div class="col-md-1 col-xs-3 product-option edit-link"><%= link_to 'Edit', edit_product_path(product) %></div>
          <div class="col-md-1 col-xs-3 product-option"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
      
        <% end %>
      
   


    <br>

    <%= link_to 'New Product', new_product_path %>
  </div>
</div>